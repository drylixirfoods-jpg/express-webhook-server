# ============================================
# EXPRESS WEBHOOK SERVER - ENVIRONMENT CONFIG
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file - only commit .env.example

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
VERIFY_TOKEN=your_verify_token_here
ALLOW_ORIGINS=http://localhost:3000
LOG_LEVEL=debug

# ============================================
# RATE LIMITING & SECURITY
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# DATABASE & QUEUE (Optional)
# ============================================
REDIS_URL=redis://localhost:6379
DATABASE_URL=mongodb://localhost:27017/webhook-server

# ============================================
# INSTAGRAM / META PLATFORM
# ============================================
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_PAGE_ID=your_page_id
META_IG_BUSINESS_ID=your_ig_business_account_id
META_ACCESS_TOKEN=your_meta_access_token

# ============================================
# YOUTUBE / GOOGLE
# ============================================
GOOGLE_PROJECT_ID=your_google_project_id
GOOGLE_CLIENT_EMAIL=your_google_client_email@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
YOUTUBE_CHANNEL_ID=your_youtube_channel_id
GOOGLE_GENAI_API_KEY=your_google_genai_api_key

# ============================================
# TIKTOK
# ============================================
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# ============================================
# E-COMMERCE PLATFORMS
# ============================================
# Shopify
SHOPIFY_STORE_DOMAIN=your_store.myshopify.com
SHOPIFY_ADMIN_API_TOKEN=your_shopify_admin_api_token

# WooCommerce
WOOCOMMERCE_STORE_URL=https://your-woo-store.com
WOOCOMMERCE_CONSUMER_KEY=your_woo_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_woo_consumer_secret

# ============================================
# AI PROVIDERS
# ============================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo

GOOGLE_GENAI_API_KEY=your_google_genai_key
META_VEO_API_KEY=your_meta_veo_api_key

# ============================================
# TELEPHONY / VOICE
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# PROSPECTING & CRM
# ============================================
CLEARBIT_API_KEY=your_clearbit_api_key
HUNTER_API_KEY=your_hunter_io_api_key
CRM_API_KEY=your_crm_api_key

# ============================================
# MODULE-SPECIFIC CONFIGURATIONS
# ============================================
# PROSPECTING
PROSPECTING_NICHE=your_business_niche
PROSPECTING_MIN_SCORE=0.7

# REELS
REELS_VIDEO_DURATION=45
REELS_AUTO_PUBLISH=false
REELS_PUBLISH_TIME=10:00

# GROWTH
GROWTH_PLAYBOOK=ethical_growth
GROWTH_TARGET_FOLLOWERS_MONTHLY=500

# ECOMMERCE
ECOMMERCE_SYNC_FREQUENCY=3600
ECOMMERCE_MAX_PRODUCTS=10000

# YOUTUBE
YOUTUBE_AUTO_PUBLISH=false
YOUTUBE_MIN_VIEWS=1000
VIDEO_GENERATION_SERVICE=veo3.1

# INSTAGRAM
INSTAGRAM_AUTO_REPLY=true
INSTAGRAM_DM_AUTO_REPLY=true
INSTAGRAM_COMMENT_MODERATION=true

# APPOINTMENTS
APPOINTMENTS_TIMEZONE=UTC
APPOINTMENTS_MIN_ADVANCE_BOOKING_HOURS=2

# VOICE
VOICE_SURVEY_TIMEOUT=300
VOICE_TTS_LANGUAGE=tr-TR
VOICE_ASR_LANGUAGE=tr-TR

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_DIR=./logs
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOG=true

# ============================================
# SECURITY
# ============================================
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_32_chars_min
